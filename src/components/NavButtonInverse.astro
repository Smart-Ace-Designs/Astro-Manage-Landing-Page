---
interface Props {
  label: string;
  link: string;
  classes?: string;
}

const { label, link, classes } = Astro.props;
---

<a
  href={link}
  class:list={[
    classes,
    "text-theme-bright-red rounded-full bg-white p-3 px-6 pt-2 align-baseline font-semibold shadow-2xl hover:bg-gray-200",
  ]}>{label}</a
>
