---
import NavButtonInverse from "./NavButtonInverse.astro";
---

<section id="cta" class="bg-theme-bright-red">
  <div
    class="container mx-auto flex flex-col items-center justify-between space-y-12 px-6 py-24 md:flex-row md:space-y-0 md:py-12"
  >
    <h2
      class="text-center text-5xl font-bold leading-tight text-white md:max-w-xl md:text-left md:text-4xl"
    >
      Simplify how your team works today
    </h2>
    <div>
      <NavButtonInverse
        label="Get Started"
        link="/"
        classes="bg-white text-theme-bright-red hover:bg-gray-200 shadow-2xl font-semibold"
      />
    </div>
  </div>
</section>
