---
interface Props {
  itemNumber: string;
  heading: string;
  content: string;
}
const { itemNumber, heading, content } = Astro.props;
---

<div class="flex flex-col space-y-3 md:flex-row md:space-x-6 md:space-y-0">
  <div class="bg-theme-bright-red-sup-light rounded-l-full md:bg-transparent">
    <div class="flex items-center space-x-2">
      <div
        class="bg-theme-bright-red rounded-full px-4 py-2 text-white md:py-1"
      >
        {itemNumber}
      </div>
    </div>
  </div>

  <div>
    <h3 class="md:font-lg text-base font-bold md:text-lg">
      {heading}
    </h3>
    <p class="text-theme-dark-grayish-blue">
      {content}
    </p>
  </div>
</div>
