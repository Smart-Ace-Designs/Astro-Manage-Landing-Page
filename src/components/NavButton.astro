---
interface Props {
  label: string;
  link: string;
  classes?: string;
}

const { label, link, classes } = Astro.props;
---

<a
  href={link}
  class:list={[
    classes,
    "bg-theme-bright-red hover:bg-theme-bright-red-light rounded-full p-3 px-6 pt-2 align-baseline text-white",
  ]}>{label}</a
>
